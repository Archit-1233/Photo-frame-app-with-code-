<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".photoactivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Photo Frame App"

        android:elevation="4dp"
        android:shadowColor="@color/purple_700"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:textSize="50dp"
        android:background="@drawable/splashphotoframe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <ImageView
        android:id="@+id/pic0"

        android:layout_width="380dp"
        android:layout_height="272dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/pic_krishna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="14dp"
        android:background="#25FF5722"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Little krishna"
        android:textColor="#1E031B"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <Button

        android:id="@+id/previous"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="160dp"
        android:backgroundTint="#56FF5722"
        android:elevation="6dp"
        android:text="previous"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

    </Button>

    <Button

        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#56FF5722"
        android:elevation="6dp"
        android:text="Next"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.762"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

    </Button>
    <ImageView
android:id="@+id/pic1"
        android:layout_width="380dp"
        android:layout_height="272dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="150dp"
        android:alpha="0"
        android:layout_marginEnd="14dp"
        android:src="@drawable/sunio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
android:id="@+id/pic2"
        android:layout_width="380dp"
        android:layout_height="272dp"
        android:alpha="0"
        android:layout_marginStart="14dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/kzama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView

        android:layout_width="380dp"
        android:id="@+id/pic3"
        android:layout_height="272dp"
        android:layout_marginStart="14dp"
        android:alpha="0"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/pokemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>